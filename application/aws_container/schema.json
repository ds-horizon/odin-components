{
  "title": "AWS container flavour schema",
  "type": "object",
  "properties": {
    "baseImage": {
      "type": "object",
      "description": "The base image to use for the container",
      "properties": {
        "repository": {
          "type": "string",
          "description": "The repository of the base image"
        },
        "tag": {
          "type": "string",
          "description": "The tag of the base image"
        }
      },
      "additionalProperties": false,
      "required": [
        "repository",
        "tag"
      ]
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations for the application pods",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "The key of the toleration"
          },
          "operator": {
            "type": "string",
            "description": "The operator of the toleration. Defaults to Equal",
            "enum": [
              "Equal",
              "Exists"
            ]
          },
          "value": {
            "type": "string",
            "description": "The value of the toleration"
          },
          "effect": {
            "type": "string",
            "description": "The effect of the toleration. Defaults to NoSchedule",
            "enum": [
              "NoSchedule",
              "PreferNoSchedule",
              "NoExecute"
            ]
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "operator": {
                  "const": "Exists"
                }
              },
              "required": ["operator"]
            },
            "then": {
              "required": ["key"]
            },
            "else": {
              "required": ["key", "value"]
            }
          }
        ]
      }
    },
    "extraEnvVars": {
      "type": "object",
      "description": "Extra environment variables to pass to application",
      "properties": {
      }
    },
    "resources": {
      "type": "object",
      "description": "The resources to allocate for the container",
      "additionalProperties": false,
      "properties": {
        "requests": {
          "type": "object",
          "description": "The resource requests for the container",
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "type": "string",
              "description": "The amount of CPU to request for the container, e.g. 0.5"
            },
            "memory": {
              "type": "string",
              "description": "The amount of memory to request for the container, e.g. 512Mi"
            }
          },
          "required": [
            "cpu",
            "memory"
          ]
        },
        "limits": {
          "type": "object",
          "description": "The resource limits for the container",
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "type": "string",
              "description": "The amount of CPU to limit for the container, e.g. 0.5"
            },
            "memory": {
              "type": "string",
              "description": "The amount of memory to limit for the container, e.g. 512Mi"
            }
          },
          "required": [
            "cpu",
            "memory"
          ]
        }
      },
      "required": [
        "requests",
        "limits"
      ]
    },
    "ports": {
      "type": "array",
      "description": "The ports to expose on the container",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "protocol": {
            "type": "string",
            "description": "The protocol of the port, e.g. TCP"
          },
          "port": {
            "type": "integer",
            "description": "The port number to expose"
          },
          "targetPort": {
            "type": "integer",
            "description": "Target port on the container"
          },
          "name": {
            "type": "string",
            "description": "The name of the port"
          },
          "path": {
            "type": "string",
            "description": "The path of for which requests should be routed to this port"
          }
        },
        "required": [
          "protocol",
          "port",
          "targetPort",
          "name",
          "path"
        ]
      }
    },
    "probes": {
