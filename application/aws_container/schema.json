            "type": {
              "type": "string",
              "description": "The type of probe to use",
              "enum": [
                "HTTP_GET",
                "TCP",
                "GRPC"
              ]
            },
            "initialDelaySeconds": {
              "type": "integer",
              "description": "The initial delay before starting the probe"
            },
            "intervalSeconds": {
              "type": "integer",
              "description": "The interval between probes"
            },
            "timeoutSeconds": {
              "type": "integer",
              "description": "The timeout for the probe"
            },
            "successThreshold": {
              "type": "integer",
              "description": "The number of successful probes before the container is considered healthy"
            },
            "failureThreshold": {
              "type": "integer",
              "description": "The number of failed probes before the container is considered unhealthy"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "HTTP_GET"
                  }
                },
                "required": [
                  "type",
                  "config",
                  "initialDelaySeconds",
                  "intervalSeconds",
                  "timeoutSeconds",
                  "successThreshold",
                  "failureThreshold"
                ]
              },
              "then": {
                "properties": {
                  "config": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string",
                        "description": "The path to use for the probe"
                      },
                      "port": {
                        "type": "integer",
                        "description": "The port to use for the probe"
                      },
                      "headers": {
                        "type": "object",
                        "description": "The headers to use for the probe",
                        "properties": {
                        }
                      },
                      "scheme": {
                        "type": "string",
                        "description": "The scheme to use for the probe"
                      }
                    },
                    "required": [
                      "path",
                      "port"
                    ]
                  }
                },
                "required": [
                  "type",
                  "config",
                  "initialDelaySeconds",
                  "intervalSeconds",
                  "timeoutSeconds",
                  "successThreshold",
                  "failureThreshold"
                ]
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "GRPC"
