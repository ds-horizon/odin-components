                  "initialDelaySeconds",
                  "intervalSeconds",
                  "timeoutSeconds",
                  "failureThreshold"
                ]
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "TCP"
                  }
                },
                "required": [
                  "type",
                  "config",
                  "initialDelaySeconds",
                  "intervalSeconds",
                  "timeoutSeconds",
                  "successThreshold",
                  "failureThreshold"
                ]
              },
              "then": {
                "properties": {
                  "config": {
                    "type": "object",
                    "properties": {
                      "port": {
                        "type": "integer",
                        "description": "The port to use for the probe"
                      }
                    },
                    "required": [
                      "port"
                    ]
                  }
                },
                "required": [
                  "type",
                  "config",
                  "initialDelaySeconds",
                  "intervalSeconds",
                  "timeoutSeconds",
                  "successThreshold",
                  "failureThreshold"
                ]
              }
            }
          ],
          "required": [
            "type",
            "config",
            "initialDelaySeconds",
            "intervalSeconds",
            "timeoutSeconds",
            "successThreshold",
            "failureThreshold"
          ]
        },
