      "additionalProperties": false,
      "properties": {
        "requests": {
          "type": "object",
          "description": "The resource requests for the container",
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "type": "string",
              "description": "The amount of CPU to request for the container, e.g. 0.5"
            },
            "memory": {
              "type": "string",
              "description": "The amount of memory to request for the container, e.g. 512Mi"
            }
          },
          "required": []
        },
        "limits": {
          "type": "object",
          "description": "The resource limits for the container",
          "additionalProperties": false,
          "properties": {
            "cpu": {
              "type": "string",
              "description": "The amount of CPU to limit for the container, e.g. 0.5"
            },
            "memory": {
              "type": "string",
              "description": "The amount of memory to limit for the container, e.g. 512Mi"
            }
          },
          "required": []
        }
      },
      "required": []
    },
    "replicas": {
      "type": "integer",
      "description": "Number of replicas to deploy"
    },
    "ports": {
      "type": "array",
      "description": "The ports to expose on the container",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "port": {
            "type": "integer",
            "description": "The port number to expose"
          },
          "targetPort": {
            "type": "integer",
            "description": "Target port on the container"
          }
        },
        "required": [
          "port",
          "targetPort"
        ]
      }
    },
