{
  "title": "AWS EC2 provisioning configuration",
  "type": "object",
  "properties": {
    "baseImages": {
      "type": "array",
      "description": "List of options for finding the base AMI on top of which artifact AMI will be created",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "filters": {
            "type": "object",
            "description": "Filters to search base AMI. Allowed values: https://docs.aws.amazon.com/AWSEC2/latest/APIReference/API_DescribeImages.html",
            "properties": {
              "architecture": {
                "type": "string",
                "description": "Architecture of the AMI"
              }
            },
            "additionalProperties": true,
            "required": [
              "architecture"
            ]
          },
          "buildInstanceType": {
            "type": "string",
            "description": "Instance type to launch when for AMI creation"
          },
          "sshUser": {
            "type": "string",
            "description": "SSH username for base AMI"
          }
        },
        "additionalProperties": false,
        "required": [
          "filters",
          "buildInstanceType",
          "sshUser"
        ]
      }
    },
    "extraEnvVars": {
      "type": "object",
      "description": "Extra environment variables to pass to application",
      "properties": {
      }
    },
    "stacks": {
      "type": "number",
      "description": "Number of stacks. Only applicable if discovery is not 'none'",
      "maximum": 10
    },
    "asg": {
      "type": "object",
      "description": "AWS autoscaling group configuration",
      "properties": {
        "desiredInstances": {
          "type": "number",
          "description": "Desired number of instances. If using more than one stack specify total number of instances"
        },
        "initialCapacity": {
          "type": "number",
          "description": "Initial number of instances to launch to check for application health"
        },
        "maxInstances": {
          "type": "number",
          "description": "Maximum number of instances in ASG"
        },
        "instances": {
          "type": "array",
          "description": "ASG instance pool configuration",
          "minItems": 1,
          "items": {
            "type": "object",
            "description": "Instance types for architecture",
            "properties": {
              "architecture": {
                "type": "string",
                "description": "Architecture of the instances"
              },
              "types": {
                "type": "array",
                "description": "Instances types",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "description": "Instance type"
                }
              }
            },
            "additionalProperties": true,
            "required": [
              "architecture",
              "types"
            ]
          }
        },
        "onDemandBaseCapacity": {
          "type": "number",
          "description": "On demand base capacity in ASG"
        },
        "onDemandPercentageAboveBaseCapacity": {
          "type": "number",
          "description": "On demand percentage above base capacity in ASG"
        },
        "healthcheckGracePeriod": {
          "type": "number",
          "description": "ASG healthcheck grace period"
        },
        "spotAllocationStrategy": {
          "type": "string",
          "description": "ASG spot allocation strategy",
          "enum": [
            "capacity-optimized",
            "price-capacity-optimized",
            "capacity-optimized-prioritized",
            "lowest-price"
          ]
        },
        "terminationPolicies": {
          "type": "array",
          "description": "ASG termination policy",
          "items": {
            "type": "string",
            "enum": [
              "OldestInstance",
              "OldestLaunchConfiguration",
              "NewestInstance",
              "ClosestToNextInstanceHour",
              "Default",
              "OldestLaunchTemplate",
              "AllocationStrategy"
            ]
          }
        },
        "suspendProcesses": {
          "type": "array",
          "description": "Processes to suspend in ASG",
          "items": {
            "type": "string",
            "enum": [
              "Launch",
              "Terminate",
              "AddToLoadBalancer",
              "AlarmNotification",
              "AZRebalance",
              "HealthCheck",
              "InstanceRefresh",
              "ReplaceUnhealthy",
              "ScheduledActions"
            ]
          }
        },
        "snsTopicArn": {
          "type": "string",
          "description": "SNS topic where to send asg notifications"
        },
        "capacityRebalance": {
          "type": "boolean",
          "description": "Whether to enable capacityRebalance in ASG"
        },
        "instanceMaintenancePolicy": {
          "type": "object",
          "description": "Instance maintenance policy of the ASG",
          "properties": {
            "minHealthyPercentage": {
              "type": "number",
              "description": "Minimum healthy instance percentage"
            },
            "maxHealthyPercentage": {
              "type": "number",
              "description": "Maximum healthy instance percentage"
            }
          },
          "additionalProperties": false,
          "required": [
            "minHealthyPercentage",
            "maxHealthyPercentage"
          ]
        },
        "imdsv2": {
          "type": "string",
          "enum": [
            "optional",
            "required"
          ],
          "description": "Whether to enable imds v2"
        },
        "defaultCooldown": {
          "type": "number",
          "description": "Time between scaling actions (seconds)"
        },
        "defaultInstanceWarmup": {
          "type": "number",
          "description": "number of seconds that newly launched instances are considered as warming up, before they are counted toward the desired capacity"
        }
      },
      "additionalProperties": false,
      "required": [
        "desiredInstances",
        "initialCapacity",
        "maxInstances",
        "instances",
        "onDemandBaseCapacity",
        "onDemandPercentageAboveBaseCapacity",
        "healthcheckGracePeriod",
        "spotAllocationStrategy",
        "terminationPolicies",
        "suspendProcesses",
        "capacityRebalance",
        "instanceMaintenancePolicy",
        "imdsv2"
      ]
    },
    "loadBalancer": {
      "type": "object",
      "description": "Load balancer configuration. Applicable only when discovery is not 'none'",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of load balancer",
          "enum": [
            "alb",
            "nlb",
            "clb"
          ]
        },
        "lcus": {
          "type": "object",
          "description": "Load balancer capacity units",
          "properties": {
            "internal": {
              "type": "number",
              "minimum": 0,
              "description": "Load balancer capacity units for internal load balancer"
            },
            "external": {
              "type": "number",
              "minimum": 0,
              "description": "Load balancer capacity units for external load balancer"
            }
          },
          "additionalProperties": false,
          "required": [
            "internal",
            "external"
          ]
        },
        "listeners": {
          "type": "array",
          "description": "Listeners for load balancer",
          "items": {
            "type": "object",
            "properties": {
              "protocol": {
                "type": "string",
                "description": "Load balancer protocol",
                "enum": [
                  "HTTP",
                  "HTTPS",
                  "TCP"
                ]
              },
              "port": {
                "type": "number",
                "description": "Load balancer port"
              },
              "targetPort": {
                "type": "number",
                "description": "Instance port"
              },
              "targetProtocol": {
                "type": "string",
                "description": "Instance protocol",
                "enum": [
                  "HTTP",
                  "HTTPS",
                  "GRPC",
                  "TCP"
                ]
              },
              "healthchecks": {
                "type": "object",
                "description": "Load balancer/Target group healthcheck configuration",
                "properties": {
                  "interval": {
                    "type": "number",
                    "description": "Amount of time between health checks sent to EC2 instances",
                    "minimum": 5,
                    "maximum": 300
                  },
                  "healthyThreshold": {
                    "type": "number",
                    "description": "Number of consecutive health check failures before declaring an EC2 instance healthy",
                    "minimum": 2,
                    "maximum": 10
                  },
                  "unhealthyThreshold": {
                    "type": "number",
                    "description": "Number of consecutive health check failures before declaring an EC2 instance unhealthy",
                    "minimum": 2,
                    "maximum": 10
                  },
                  "timeout": {
                    "type": "number",
                    "description": "Time to wait for EC2 instances to respond to health checks",
                    "minimum": 2,
                    "maximum": 60
                  },
                  "path": {
                    "type": "string",
                    "description": "Healthcheck path"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "interval",
                  "healthyThreshold",
                  "unhealthyThreshold",
                  "timeout",
                  "path"
                ]
              }
            },
            "additionalProperties": false,
            "required": [
              "protocol",
              "port",
              "targetPort",
              "targetProtocol"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "lcus",
        "listeners"
      ]
    },
    "strategy": {
      "type": "object",
      "description": "Deployment strategy configuration",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of deployment strategy",
          "enum": [
            "blue-green"
          ]
        },
        "config": {
          "type": "object",
          "description": "Deployment strategy configuration"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "name": {
                "const": "blue-green"
              }
            }
          },
          "then": {
            "properties": {
              "config": {
                "properties": {
                  "autoRouting": {
                    "type": "boolean",
                    "description": "Whether to route traffic after successful deployment?"
                  },
                  "canary": {
                    "type": "object",
                    "description": "Canary configuration",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "description": "Enable canary analysis?"
                      },
                      "errorThreshold": {
                        "type": "object",
                        "description": "Error tolerance during canary analysis",
                        "properties": {
                          "metric": {
                            "type": "string",
                            "description": "Error metric",
                            "enum": [
                              "absolute",
                              "percentage"
                            ]
                          },
                          "value": {
                            "type": "number",
                            "description": "Value of error metric"
                          }
                        },
                        "additionalProperties": false,
                        "required": [
                          "metric",
                          "value"
                        ]
                      },
                      "steps": {
                        "type": "object",
                        "description": "Canary step configuration",
                        "properties": {
                          "weight": {
                            "type": "number",
                            "description": "Increase weight by amount in each step"
                          },
                          "count": {
                            "type": "number",
                            "description": "Number of steps",
                            "minimum": 1
                          },
                          "duration": {
                            "type": "number",
                            "description": "Time to wait for each step in seconds"
                          }
                        },
                        "additionalProperties": false,
                        "required": [
                          "weight",
                          "count",
                          "duration"
                        ]
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "enabled",
                      "errorThreshold",
                      "steps"
                    ]
                  },
                  "passiveDownscale": {
                    "type": "object",
                    "description": "Whether to downscale passive ASG/LCU after successful traffic routing?",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "description": "Enable passive ASG/LCU downscaling?"
                      },
                      "delay": {
                        "type": "number",
                        "description": "Time to wait before downscaling passive ASG/LCU"
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "enabled"
                    ]
                  }
                },
                "additionalProperties": false,
                "required": [
                  "autoRouting",
                  "canary",
                  "passiveDownscale"
                ]
              }
            }
          }
        }
      ],
      "required": [
        "name",
        "config"
      ]
    },
    "tags": {
      "type": "object",
      "description": "Custom tags to add to created resources",
      "properties": {
      }
    },
    "ebs": {
      "type": "object",
      "description": "EBS configuration",
      "properties": {
        "size": {
          "type": "number",
          "description": "Desired size of ebs volume"
        }
      },
      "additionalProperties": false,
      "required": [
        "size"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "baseImages",
    "extraEnvVars",
    "stacks",
    "asg",
    "loadBalancer",
    "strategy",
    "tags",
    "ebs"
  ]
}
